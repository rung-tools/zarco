(jbuild_version 1)

(executables
 ((names (zarco))
  (preprocess (pps (js_of_ocaml-ppx)))))

(rule
 ((targets (zarco.js))
  (action
    (run ${bin:js_of_ocaml} --noruntime ${lib:js_of_ocaml-compiler:runtime.js}
         --source-map ${path:zarco.bc} -o ${@} --pretty))))

(alias
 ((name DEFAULT)
  (deps (zarco.js))))
